<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
     xmlns:ui="http://schemas.microsoft.com/wix/UIExtension">
	<Product Id="*" Name="TestRunnerInstaller" Language="1033" Version="1.0.0.0" Manufacturer="Wills Productions" UpgradeCode="4d0320c8-d736-418a-9e05-35b1e7f0447c">
		<Package InstallerVersion="200" Platform="x64" Compressed="yes" InstallScope="perMachine" />

    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />
    <UIRef Id="WixUI_InstallDir" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
		<MediaTemplate EmbedCab="yes" />

		<Feature Id="ProductFeature" Title="TestRunnerInstaller" Level="1">
			<ComponentGroupRef Id="ProductComponents" />
		</Feature>
	</Product>

	<Fragment>
		<Directory Id="TARGETDIR" Name="SourceDir">
			<Directory Id="ProgramFiles64Folder">
				<Directory Id="INSTALLFOLDER" Name="Test Runner" />
			</Directory>
		</Directory>
	</Fragment>

	<Fragment>
		<ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <Component Id="TestRunner.exe" Win64="yes" Guid="{4C3803DE-6E45-5ED0-9999-361F76101DE4}">
        <File Id="TestRunner.exe" Source="$(var.TestRunner.TargetPath)" KeyPath="yes" />
      </Component>
      <Component Id="TestRunner.exe.config" Win64="yes" >
       <File Id="TestRunner.exe.config" Source="$(var.TestRunner.TargetDir)TestRunner.exe.config" KeyPath="yes"/>
      </Component>
      <Component Id="TestRunner.exe.manifest" Win64="yes" >
       <File Id="TestRunner.exe.manifest" Source="$(var.TestRunner.TargetDir)TestRunner.exe.manifest" KeyPath="yes"/>
      </Component>
      <Component Id="TestRunnerLibrary.dll" Win64="yes">
        <File Id="TestRunnerLibrary.dll" Source="$(var.TestRunnerLibrary.TargetPath)" KeyPath="yes" />
      </Component>
      <Component Id="TestRunnerService.dll" Win64="yes">
        <File Id="TestRunnerService.dll" Source="$(var.TestRunnerService.TargetPath)" KeyPath="yes" />
      </Component>
		</ComponentGroup>
	</Fragment>
</Wix>