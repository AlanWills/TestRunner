<UserControl
    x:Class="TestRunner.UserControls.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:TestRunner.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <DockPanel>
        <Menu x:Name="Menus" DockPanel.Dock="Top" Style="{StaticResource ColourTheme}">
            <MenuItem Header="_File" Style="{StaticResource ColourTheme}" Background="#FF102372" Template="{StaticResource MenuItemControlTemplate}">
                <MenuItem Header="_New" Style="{StaticResource ColourTheme}"/>
                <MenuItem Header="_Save" Style="{StaticResource ColourTheme}"/>
                <Separator Background="White" Foreground="White"/>
                <MenuItem Header="_Exit" Style="{StaticResource ColourTheme}"/>
            </MenuItem>
        </Menu>
    </DockPanel>
</UserControl>
