<UserControl
    x:Class="TestRunner.UserControls.NavBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:TestRunner.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel x:Name="NavigationPart" Orientation="Horizontal">
            <controls:NavBarButton ButtonContent="Home" TargetView="HomeView"/>
            <controls:NavBarButton ButtonContent="New" TargetView="NewConfigurationView"/>
            <controls:NavBarButton ButtonContent="Processes" TargetView="ProcessesView"/>
            <controls:NavBarButton ButtonContent="Settings" TargetView="AppSettingsView"/>
        </StackPanel>
    </Grid>
</UserControl>
