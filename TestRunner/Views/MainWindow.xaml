<Window x:Class="TestRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:controls="clr-namespace:TestRunner.UserControls"
        mc:Ignorable="d"
        Title="MainWindow"
        d:DesignWidth="1920"
        d:DesignHeight="1080">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:NavBar Grid.Row="0" />
        <Frame x:Name="Frame" NavigationUIVisibility="Hidden" Grid.Row="1"/>
        <tb:TaskbarIcon x:Name="SystemTrayIcon" TrayLeftMouseDown="SystemTrayIcon_TrayLeftMouseDown"/>
    </Grid>

</Window>
